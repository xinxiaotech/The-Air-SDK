<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apptools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/updaterImage"
                android:layout_marginTop="24dp"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:gravity="center"
                apptools:ignore="ContentDescription"
                android:src="@drawable/updater" />

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:text="@string/new_update_available"
                />
            <TextView
                android:id="@+id/dialog_title_tv"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/fgOnCard"
                android:textSize="14sp"
                apptools:text="发现新版本 v1.1.0"
                />
            <TextView
                android:id="@+id/dialog_content_tv"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/fgOnCard"
                android:textSize="14sp"
                apptools:text="CHANGE LOG:\n-   Add: xxx\n-   Add: xxx"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/negative_btn"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/BigBtn"
            android:background="@drawable/negative_btn_background"
            apptools:text="取消"
            />
        <Space
            android:layout_width="12dp"
            android:layout_height="0dp"
            />
        <Button
            android:id="@+id/positive_btn"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/BigBtn"
            android:background="@drawable/blue_btn_background"
            apptools:text="更新"
            />
    </LinearLayout>
</LinearLayout>